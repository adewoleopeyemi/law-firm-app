<resources>

    <!-- Base application theme. -->
    <style name="Theme6AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/T6ColorPrimary</item>
        <item name="colorPrimaryDark">@color/T6ColorPrimaryDark</item>
        <item name="colorAccent">@color/T6ColorAccent</item>
    </style>

    <style name="Theme6AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme6AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme6CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme6CustomBottomSheetStyle</item>
    </style>

    <style name="Theme6CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Theme6FontBold">
        <item name="fontPath">@string/t6_font_bold</item>
    </style>
    <style name="Theme6FontSemibold">
        <item name="fontPath">@string/t6_font_semi_bold</item>
    </style>
    <style name="Theme6FontMedium">
        <item name="fontPath">@string/t6_font_medium</item>
    </style>
    <style name="Theme6TextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
    </style>
    <style name="Theme6EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>
    <style name="Theme6MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/t6_font_normal</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="fontPath">@string/t6_font_medium</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>