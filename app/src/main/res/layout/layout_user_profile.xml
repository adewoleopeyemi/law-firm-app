<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.iqonic.theme2.activity.Theme2ProfileActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tvSave"
            android:overScrollMode="never"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/layCover"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/theme2_cover_image_" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:alpha="0.6" />
                    <TextView
                        android:id="@+id/tvEditCoverPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:layout_marginEnd="10dp"
                        android:text="Edit Cover Photo"
                        android:gravity="center"
                        android:drawableTint="@color/t12_textColorPrimary"
                        android:drawablePadding="@dimen/_16sdp"
                        android:drawableStart="@drawable/theme2_ic_camera_line"
                        android:textColor="@color/t12_textColorPrimary"
                        android:textSize="16sp" />

                </FrameLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layCover"
                    android:layout_marginTop="@dimen/_minus16sdp"
                    app:cardBackgroundColor="@color/t12_colorPrimary"
                    app:cardCornerRadius="@dimen/_16sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/carProfile"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:layout_marginStart="@dimen/_30sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                app:cardCornerRadius="8dp">

                                <ImageView
                                    android:id="@+id/ivUserProfile"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_outline_person_outline"
                                    />
                            </androidx.cardview.widget.CardView>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginEnd="@dimen/_14sdp"
                                android:layout_toEndOf="@id/carProfile"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvUserName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/basic"
                                    android:textSize="18sp"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/tvUserEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tvUserName"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:text="" />

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_alignParentEnd="true"
                                android:padding="@dimen/_6sdp"
                                android:background="@drawable/theme2_ic_fab_back"
                                android:layout_margin="10dp"
                                android:src="@drawable/theme2_ic_pencil_line"/>

                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/cardProfile"
                    android:layout_marginTop="@dimen/_minus35sdp"
                    android:layout_marginBottom="@dimen/_minus25sdp"
                    app:cardCornerRadius="@dimen/_16sdp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp">
                        <LinearLayout
                            android:layout_marginTop="@dimen/Theme2_spacing_control_half"
                            android:layout_marginStart="@dimen/Theme2_spacing_middle"
                            android:layout_marginEnd="@dimen/Theme2_spacing_middle"
                            android:layout_marginBottom="@dimen/Theme2_spacing_middle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/Theme2_spacing_control"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/Theme2_spacing_standard"
                                android:layout_marginTop="@dimen/Theme2_spacing_standard"
                                android:layout_marginEnd="@dimen/Theme2_spacing_standard"
                                android:text="Personal"
                                android:fontFamily="@font/abril_fatface"
                                android:textColor="@color/black"
                                android:textSize="@dimen/Theme2_font_size_normal" />

                            <TextView
                                android:id="@+id/address"
                                android:layout_marginTop="@dimen/Theme2_spacing_standard_new"
                                android:fontFamily="@font/basic"
                                android:text=""
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_margin="@dimen/Theme2_spacing_standard"
                                android:background="@color/Theme2_view_color"
                                android:paddingStart="@dimen/Theme2_spacing_standard"
                                android:paddingEnd="@dimen/Theme2_spacing_standard" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginStart="@dimen/Theme2_spacing_middle"
                            android:layout_marginTop="@dimen/Theme2_spacing_control_half"
                            android:layout_marginEnd="@dimen/Theme2_spacing_middle"
                            android:layout_marginBottom="@dimen/Theme2_spacing_middle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/Theme2_spacing_control"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/Theme2_spacing_standard"
                                android:layout_marginTop="@dimen/Theme2_spacing_standard"
                                android:layout_marginEnd="@dimen/Theme2_spacing_standard"
                                android:text="Contact"
                                android:fontFamily="@font/abril_fatface"
                                android:textColor="@color/t12_textColorPrimary"
                                android:textSize="@dimen/Theme2_font_size_normal" />

                            <TextView
                                android:id="@+id/phone_number"
                                android:layout_marginStart="@dimen/Theme2_spacing_standard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/Theme2_spacing_standard_new"
                                android:fontFamily="@font/basic"
                                android:text="" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_margin="@dimen/Theme2_spacing_standard"
                                android:background="@color/Theme2_view_color"
                                android:paddingStart="@dimen/Theme2_spacing_standard"
                                android:paddingEnd="@dimen/Theme2_spacing_standard" />

                            <TextView
                                android:id="@+id/personal_email"
                                android:layout_marginStart="@dimen/Theme2_spacing_standard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/Theme2_spacing_standard_new"
                                android:fontFamily="@font/basic"
                                android:text="adewoleopw@gmail.com"/>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
        <TextView
            android:id="@+id/tvSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_12sdp"
            android:text="Edit"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/Theme2_font_size_large"
            android:textAppearance="@font/abril_fatface"
            android:layout_alignParentBottom="true"
            android:background="@drawable/theme2_bg_button_ract"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/theme2_toolbar" />
    </RelativeLayout>
</layout>