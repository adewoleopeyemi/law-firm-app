<?xml version="1.0" encoding="utf-8"?>

                                                               
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/layout_form_detail_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_top">
            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crimanal_law"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:fontFamily="@font/basic"
                android:textColor="@color/black"/>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/t12_colorPrimary"
                android:layout_below="@id/tv_category"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_below="@id/view1"
                android:fontFamily="@font/basic"
                android:layout_margin="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tv_answer_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adewole_opeyemi"
                android:textSize="14sp"
                android:textColor="@color/t12_textColorPrimary"
                android:layout_toEndOf="@id/tv_first_name"
                android:layout_below="@id/view1"
                android:fontFamily="@font/basic"
                android:layout_marginTop="@dimen/_10sdp"/>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/t12_colorPrimary"
                android:layout_below="@id/tv_first_name"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/basic"
                />

            <TextView
                android:id="@+id/tv_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textSize="14sp"
                android:fontFamily="@font/basic"
                android:textColor="@color/black"
                android:layout_below="@id/view2"
                android:layout_margin="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tv_answer_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adewole_opeyemi"
                android:textSize="14sp"
                android:textColor="@color/t12_textColorPrimary"
                android:layout_toEndOf="@id/tv_last_name"
                android:layout_marginLeft="6.2dp"
                android:layout_below="@id/view2"
                android:fontFamily="@font/basic"
                android:layout_marginTop="@dimen/_10sdp"/>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/basic"
                android:background="@color/t12_colorPrimary"
                android:layout_below="@id/tv_last_name"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/budget"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/basic"
                android:layout_below="@id/view3"
                android:layout_margin="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tv_answer_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adewole_opeyemi"
                android:textSize="14sp"
                android:textColor="@color/t12_textColorPrimary"
                android:layout_toEndOf="@id/tv_budget"
                android:layout_below="@id/view3"
                android:fontFamily="@font/basic"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="27dp"/>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/t12_colorPrimary"
                android:layout_below="@id/tv_budget"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_bullet_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bullet_point"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/basic"
                android:layout_below="@id/view4"
                android:layout_margin="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tv_answer_bullet_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adewole_opeyemi"
                android:textSize="14sp"
                android:textColor="@color/t12_textColorPrimary"
                android:layout_toEndOf="@id/tv_budget"
                android:layout_below="@id/view4"
                android:fontFamily="@font/basic"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="28dp"
                android:maxLength="200"/>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/t12_colorPrimary"
                android:layout_below="@id/tv_answer_bullet_point"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/basic"
                android:layout_below="@id/view5"
                android:layout_margin="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tv_answer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adewole_opeyemi"
                android:textSize="14sp"
                android:textColor="@color/t12_textColorPrimary"
                android:layout_toEndOf="@id/tv_budget"
                android:layout_below="@id/view5"
                android:fontFamily="@font/basic"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="28dp"
                android:maxLength="200"/>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/t12_colorPrimary"
                android:layout_below="@id/tv_status"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>
    </ScrollView>
         